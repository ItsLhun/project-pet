<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta
      name='viewport'
      content='width=device-width, initial-scale=1, shrink-to-fit=no'
    />
    <title>{{title}}</title>
    <script src='/scripts/sidebar.js' defer></script>
    <script src='/scripts/profile-picture-upload.js' defer></script>
    <script src='/scripts/messages.js' defer></script>
    <link rel='stylesheet' href='/styles/style.css' />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css'
    />
  </head>
  <body>
    <nav>
      <a href='/'>Home</a>
      {{#if user}}
        <div id='menu-toggle'>
          <div id='input-wrap'>
            <input id='side-menu-input' class='' type='checkbox' />
            <span class='burger'></span>
            <span class='burger'></span>
            <span class='burger'></span>
          </div>
          <ul id='sidebar-menu' class='sidebar-no-show'>
            <div id='user-introduction'>
              <img
                id='user-profile-picture'
                src='{{user.profilePicture}}'
                alt='{{user.username}}'
              />
              <p>{{user.firstName}} {{user.lastName}}</p>
            </div>
            <a href='/'>Home</a>
            <a href='/user'>My Profile</a>
            <a href='/user/messages'>
              Messages
              {{#if unread}}
                <span id='unread-amount'>{{unread}}</span>
              {{/if}}
            </a>
            <form action='/authentication/sign-out' method='POST'>
              <button>Sign Out</button>
            </form>
          </ul>
        </div>
      {{else}}
        <a href='/authentication/user-sign-in'>Sign In</a>
        <a href='/authentication/prof-sign-in'>Professional Area</a>

      {{/if}}
    </nav>
    {{{body}}}
    <script src='https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js'></script>
  </body>
</html>