<h1>Main User Dashboard TBC</h1>

<div id='pet-summary' class='dashboard-component'>
  <div class='component-header'>
  <h4 class='component-title'>My pets</h4>

    <div class="btn-wrapper"><a href='/pet/create' class="add-pet-button">Add pet</a></div>
    </div>
  <div class="pet-wrapper-summary">
  {{#if pets}}
    {{#each pets}}
    {{> petMiniature this}}
    {{/each}}
  {{/if}}
  </div>
  
</div>
<div id='upcoming-events' class='dashboard-component'>
  <h4 class='component-title'>Upcoming (15 days)</h4>
  <div>
    <div id='display-upcoming'></div>

    {{!-- {{#if events}}{{else}}
      <p>There are no upcoming events!</p>
      {{else}}
    {{/if}} --}}
  </div>
</div>
<div id='calendar' class='dashboard-component'></div>
    <script src='https://unpkg.com/axios/dist/axios.min.js' ></script>
    <script src='/scripts/calendar-api.js' ></script>
    <script src='/scripts/calendarjs.js' ></script>
    <script src='/scripts/calendar-options.js'></script>
    <script>
      fetchUserEventsHTTP()
        .then((res) => calendarInstance.setEvents(res.data))
        .catch((error) => console.log(error));
    </script>