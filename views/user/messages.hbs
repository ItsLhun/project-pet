<h1>Messages</h1>
<ul>
  {{#each messages}}
    <li class='user-message'>
      <p>{{type}}</p>
      <p>From: {{from.username}} at {{sent}}</p>
      <p>Pet: {{pet.name}}</p>
      {{#if confirmed}}
        <p>Status: {{status}}</p>
      {{else}}
        <div id='message-buttons'>
          <form id='confirm' method='POST' action='/message/respond/{{id}}'>
            <button
              name='accept'
              value='Accepted'
              id='accept-button'
            >Accept</button>
            <button
              name='decline'
              value='Declined'
              id='decline-button'
            >Decline</button>
          </form>
        </div>
        <form method='POST' action='/message/delete/{{id}}'>
          <button id='delete-message'>Delete</button>
        </form>
      {{/if}}
    </li>
  {{/each}}
</ul>