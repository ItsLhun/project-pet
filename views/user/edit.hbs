<h1>Edit profile</h1>
<form action='/user/edit' method='POST' enctype='multipart/form-data'>
  <label for='edit-first-name'>First Name</label>
  <input
    id='edit-first-name'
    name='firstName'
    type='text'
    value={{user.firstName}}
  />
  <label for='edit-last-name'>Last Name</label>
  <input
    id='edit-last-name'
    name='lastName'
    type='text'
    value={{user.lastName}}
  />
  <label for='edit-username'>Username</label>
  <input
    id='edit-username'
    name='username'
    type='text'
    value={{user.username}}
  />
  <label for='edit-email'>Email</label>
  <input id='edit-email' name='email' type='text' value={{user.email}} />
  <label for='edit-profile-picture'>Profile picture</label>
  <input id='edit-profile-picture' name='profilePicture' type='file' />
  <button>Save</button>
</form>