<div class='miniature-wrapper'>
  <a href='/pet/{{_id}}'>
    <div class='miniature-image-holder'>
      {{#if profilePicture}}
        <img src='{{profilePicture}}' alt='profile picture' />
      {{else}}
        <img src='/images/index.png' alt='' />
      {{/if}}
    </div>
    <h5>{{#ifNotEquals @root.user._id owner._id}}<span><img
            class='authorized-indicator-icon'
            src='/images/pet-paw-solid.svg'
            alt=''
          /></span>
      {{/ifNotEquals}}
      {{name}}</h5>
  </a>
</div>