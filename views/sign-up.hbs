<form action='/authentication/sign-up' method='POST'>
  <label for='input-name'>Name</label>
  <input
    type='text'
    id='input-name'
    name='name'
    placeholder='Your Name'
    required
  />
  <label for='input-name'>Username</label>
  <input
    type='text'
    id='input-username'
    name='username'
    placeholder='Your Username'
    minlength='3'
    required
  />
  <label for='input-email'>Email</label>
  <input
    type='email'
    id='input-email'
    name='email'
    placeholder='Your Email'
    required
  />
  <label for='input-password'>Password</label>
  <input
    type='password'
    name='password'
    id='input-password'
    placeholder='A Strong Password'
    minlength='8'
    required
  />
  <label for='input-repeat-password'>Repeat password</label>
  <input
    type='password'
    name='repeatPassword'
    id='input-repeat-password'
    placeholder='Repeat Password'
    minlength='8'
    required
  />
  <button>Sign Up</button>
</form>